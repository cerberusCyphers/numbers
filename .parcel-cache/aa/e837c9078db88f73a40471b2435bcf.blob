      score--;
      document.querySelector('.score').textContent = score;
    } else {
      //   document.querySelector('.message').textContent = 'You Lose ğŸš¨';
      displayMessage('You Lose ğŸš¨');

      document.querySelector('.score').textContent = '0';
    }
  }
